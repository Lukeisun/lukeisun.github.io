---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import LI from "../components/LI.astro";
import { CS2, SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main>
			<Header title={SITE_TITLE} />
			<div class="header">
				<h1>
					Adin Lukas DelaCruz
				</h1>
			</div>
			<div class="bio">
					<p>
					I am currently an Embedded Software Engineer at Bogen
					Communications. I have graduated from the
					University of Central Florida with a Bachelor's
					in Computer Science. My personal hobbies include gaming <img
						src={CS2}
						alt="cs2"
						class="game"
					/>, enjoying time with my wife, and learning new
					things (recently homelabbing!).
				</p>
			</div>
			<br />
		</main>

		<Footer />
	</body>
</html>
